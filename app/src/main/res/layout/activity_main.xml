<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:id="@+id/btnSelectFolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Backup Folder"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnRemoveFolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remove Selected Folder"
                android:layout_marginBottom="12dp" />

            <ListView
                android:id="@+id/listFolders"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:divider="#CCCCCC"
                android:dividerHeight="1dp"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnFileFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Configure File Type Filter"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnCredentials"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit SMB Credentials"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnAvailableDevices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show Available Devices"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnBackup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Backup Now"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/txtResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status messages will appear here..."
                android:textSize="16sp"
                android:padding="16dp"
                android:background="#EEEEEE"
                android:scrollbars="vertical" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>